<form col="6">
    <label name="name"/>
    <field name="name"/>
    <label name="type"/>
    <field name="type"/>
    <label name="filename"/>
    <field name="filename"/>
    <label name="sequence"/>
    <field name="sequence"/>
    <label name="implements"/>
    <field name="implements"/>
    <label name="parent"/>
    <field name="parent"/>
    <notebook colspan="6">
        <page name="content">
            <field name="content" colspan="4" height="600" widget="code"/>
        </page>
        <page name="preview">
            <label name="preview_record"/>
            <field name="preview_record"/>
            <label name="preview_placeholder_macros"/>
            <field name="preview_placeholder_macros"/>
            <field name="preview" colspan="4" height="600" widget="document"/>
        </page>
        <page name="all_content">
            <field name="all_content" colspan="4" height="600" widget="code"/>
        </page>
        <page name="uses">
            <field name="uses" colspan="4" height="500"/>
        </page>
    </notebook>
</form>
