<tryton>
  <data>
    <record model='html.template' id="invoice_template_id">
        <field name="name">Invoice</field>
        <field name="type">base</field>
        <field name="filename">templates/invoice/invoice.html</field>
    </record>

    <record model='html.template.signature' id="invoice_due_dates_macro_signature">
        <field name="name">show_due_dates(invoice)</field>
    </record>
    <record model='html.template' id="invoice_due_dates_macro_id">
        <field name="name">Invoice Due dates</field>
        <field name="type">macro</field>
        <field name="filename">templates/invoice/due_dates_macro.html</field>
        <field name="implements" ref="html_report.invoice_due_dates_macro_signature"/>
    </record>

<!--
    <record model='html.template' id="invoice_info_table_macro_id">
        <field name="name">Invoice info</field>
        <field name="type">macro</field>
        <field name="filename">templates/invoice/invoice_info_table_macro.html</field>
        <field name="implements" ref="html_report.invoice_info_table_macro_signature"/>
    </record> -->

    <record model='html.template.signature' id="invoice_payment_info_macro_signature">
      <field name="name">show_invoice_extra_info(invoice)</field>
    </record>
    <record model='html.template' id="invoice_payment_info_macro_id">
        <field name="name">Invoice Payment Info</field>
        <field name="type">macro</field>
        <field name="filename">templates/invoice/payment_info_macro.html</field>
        <field name="implements" ref="html_report.invoice_payment_info_macro_signature"/>
    </record>

    <record model='html.template.signature' id="invoice_lines_macro_signature">
        <field name="name">show_invoice_lines(document)</field>
    </record>
    <record model='html.template' id="invoice_lines_macro_id">
        <field name="name">Invoice Lines</field>
        <field name="type">macro</field>
        <field name="filename">templates/invoice/lines_macro.html</field>
        <field name="implements" ref="html_report.invoice_lines_macro_signature"/>
    </record>


    <record model='html.template.signature' id="invoice_lines_simplified_macro_signature">
        <field name="name">show_invoice_lines_simplified(document)</field>
    </record>
    <record model='html.template' id="simplified_invoice_lines_macro_id">
        <field name="name">Invoice Lines Simplified</field>
        <field name="type">macro</field>
        <field name="filename">templates/invoice/simplified_lines_macro.html</field>
        <field name="implements" ref="html_report.invoice_lines_simplified_macro_signature"/>
    </record>

    <record model='html.template.signature' id="invoice_taxes_macro_signature">
        <field name="name">show_taxes(invoice)</field>
    </record>
    <record model='html.template' id="invoice_taxes_macro_id">
        <field name="name">Invoice Taxes</field>
        <field name="type">macro</field>
        <field name="filename">templates/invoice/taxes_macro.html</field>
        <field name="implements" ref="html_report.invoice_taxes_macro_signature"/>
    </record>

    <record model='html.template.signature' id="invoice_totals_macro_signature">
        <field name="name">show_totals(invoice)</field>ac
    </record>
    <record model='html.template' id="invoice_totals_macro_id">
        <field name="name">Invoice Totals</field>
        <field name="type">macro</field>
        <field name="filename">templates/invoice/totals_macro.html</field>
        <field name="implements" ref="html_report.invoice_totals_macro_signature"/>
    </record>

  </data>

  <data depends="account_invoice">
    <!-- Invoice Report -->

    <record model="ir.action.report" id="account_invoice.report_invoice">
        <field name="active" eval="False"/>
    </record>

    <record model="ir.action.report" id="html_report_invoice">
        <field name="name">Invoice</field>
        <field name="model">account.invoice</field>
        <field name="report_name">account.invoice</field>
        <field name="extension">pdf</field>
        <field name="template_extension">jinja</field>
        <field name="single" eval="True"/>
        <field name="html_template" ref="invoice_template_id"/>
        <field name="html_header_template" ref="header_template"/>
        <field name="html_footer_template" ref="footer_template"/>
        <field name="extension">pdf</field>
    </record>

    <record model="ir.action.keyword" id="report_invoice_keyword">
        <field name="keyword">form_print</field>
        <field name="model">account.invoice,-1</field>
        <field name="action" ref="html_report_invoice"/>
    </record>

    <record model="html.report.template" id="report_invoice_invoice_company_info_id">
      <field name="report" ref="html_report_invoice"/>
      <field name="signature" ref="company_info_macro_signature"/>
      <field name="template" ref="company_info_macro_id"/>
    </record>

    <record model="html.report.template" id="report_invoice_due_dates_id">
      <field name="report" ref="html_report_invoice"/>
      <field name="signature" ref="invoice_due_dates_macro_signature"/>
      <field name="template" ref="invoice_due_dates_macro_id"/>
    </record>

    <record model="html.report.template" id="report_invoice_invoice_info_id">
      <field name="report" ref="html_report_invoice"/>
      <field name="signature" ref="document_info_macro_signature"/>
      <field name="template" ref="document_info_macro_id"/>
    </record>

    <record model="html.report.template" id="report_invoice_invoice_payment_info_id">
      <field name="report" ref="html_report_invoice"/>
      <field name="signature" ref="invoice_payment_info_macro_signature"/>
      <field name="template" ref="invoice_payment_info_macro_id"/>
    </record>

    <record model="html.report.template" id="report_invoice_invoice_lines_info_id">
      <field name="report" ref="html_report_invoice"/>
      <field name="signature" ref="invoice_lines_macro_signature"/>
      <field name="template" ref="invoice_lines_macro_id"/>
    </record>

    <record model="html.report.template" id="report_invoice_invoice_party_info_id">
      <field name="report" ref="html_report_invoice"/>
      <field name="signature" ref="party_macro_signature"/>
      <field name="template" ref="party_macro_id"/>
    </record>

    <record model="html.report.template" id="report_invoice_invoice_taxes_info_id">
      <field name="report" ref="html_report_invoice"/>
      <field name="signature" ref="invoice_taxes_macro_signature"/>
      <field name="template" ref="invoice_taxes_macro_id"/>
    </record>

    <record model="html.report.template" id="report_invoice_invoice_totals_info_id">
      <field name="report" ref="html_report_invoice"/>
      <field name="signature" ref="invoice_totals_macro_signature"/>
      <field name="template" ref="invoice_totals_macro_id"/>
    </record>


  </data>
</tryton>
